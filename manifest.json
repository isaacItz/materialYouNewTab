{
  "manifest_version": 2,
  "name": "Material You NewTab",
  "version": "1.2.1",
  "description": "A Simple New Tab (browser's home page) inspired by Google's 'Material You' design.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "script.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "isaac.est.cbtis@gmail.com"
    }
  }
}
